<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="sample.ControllerIndex"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="0">
        IPAddress
    </Label>
    <TextField fx:id="ipaddress" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="0">

    </TextField>
    <Button fx:id="client" onAction="#actasClient" GridPane.columnIndex="3" GridPane.columnSpan="1"
            GridPane.rowIndex="0">
        Connect
    </Button>
    <HBox GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" alignment="BASELINE_CENTER">
        <Button fx:id="server" onAction="#actAsServer">
            Wait for Connection
        </Button>
        <Button fx:id="cancelServer" onAction="#cancelServer" visible="false">
            Go Back
        </Button>
    </HBox>
</GridPane>