<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.ControllerIndex" alignment="center" hgap="10" vgap="10">

    <Label text="MyName" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="0">

    </Label>
    <TextField fx:id="me" id="Me" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="0">
    </TextField>

    <Label GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="1">
    Friend Name
</Label>
    <TextField fx:id="friend" id="friend" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1">
    </TextField>
    <Label GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="2">
        IP Address
    </Label>
    <TextField fx:id="ipaddressField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" >

    </TextField>
    <Button fx:id="client" onAction="#actasClient" GridPane.columnIndex="3" GridPane.columnSpan="1"
            GridPane.rowIndex="2">
        Connect
    </Button>
    <HBox GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" alignment="BASELINE_CENTER">
        <Button fx:id="server" onAction="#actAsServer">
            Wait for Connection
        </Button>
        <Button fx:id="cancelServer"
                onAction="#cancelServer" visible="false">
            Go Back
        </Button>
        <CheckBox fx:id="encryption">Encryption</CheckBox>
    </HBox>
</GridPane>